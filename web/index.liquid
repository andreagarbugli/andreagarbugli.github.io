---
layout: layout-shell.liquid
title: Home
isHome: true
pagination:
  data: collections.articles
  size: 10
  alias: posts
  permalink: "{% if pagination.pageNumber == 0 %}/{% else %}/page/{{ pagination.pageNumber }}/{% endif %}index.html"
---

<section id="blog" class="section">
  {% assign list = posts %}
  {% include "post-list.liquid" %}
  <div class="pagination">
    {% if pagination.href.previous %}
      <a class="page-link" href="{{ pagination.href.previous }}">Prev</a>
    {% endif %}
    {% for href in pagination.hrefs %}
      {% assign pageNumber = forloop.index %}
      <a
        class="page-link"
        href="{{ href }}"
        {% if pageNumber == pagination.pageNumber %}aria-current="page"{% endif %}
      >{{ pageNumber }}</a>
    {% endfor %}
    {% if pagination.href.next %}
      <a class="page-link" href="{{ pagination.href.next }}">Next</a>
    {% endif %}
  </div>
</section>
